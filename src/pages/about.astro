---
import { Image } from 'astro:assets';

import BaseLayout from '@layouts/BaseLayout.astro';

import headshot from '@assets/img/headshot.jpg';

const onlinePresence = [
    {
        icon: 'fa-brands fa-github',
        url: 'https://github.com/bustinbung'
    },
    {
        icon: 'fa-brands fa-linkedin',
        url: 'https://linkedin.com/in/bustinbung'
    },
    {
        icon: 'fa-brands fa-square-instagram',
        url: 'https://instagram.com/bustinbung'
    },
    {
        icon: 'fa-brands fa-twitter',
        url: 'https://twitter.com/bustinbung'
    },
    {
        icon: 'fa-brands fa-youtube',
        url: 'https://www.youtube.com/@bustinbung'
    },
    {
        icon: 'fa-brands fa-spotify',
        url: 'https://open.spotify.com/user/31ww575syjxqf7h653q36evvbgeu?si=b48408449b544942'
    }
]
---

<BaseLayout pageTitle="about">
    <h1>about</h1>

    <div class="two-col">
        <div class="headshot">
            <Image src={headshot} alt="Justin's headshot" />
        </div>
        <div class="about-content">
            <p>Justin Jung is a third-year student at the University of Georgia pursuing a Bachelor of Arts in Entertainment and Media Studies with a certificate in New Media and a minor in Music.</p>
            
            <p>Justin has experience in principal photography and post-production, notably as a video editor.</p>
            
            <p>Justin is an Eagle Scout, Zell Miller Scholar, and recipient of the Patrick S. Gilmore Band Award.</p>
            
            <p>In his free time, Justin enjoys playing video games, reading, listening to music, and getting bubble tea.</p>

            <h2>contact</h2>
            <a href="mailto:justin@bustinbung.com">justin(at)bustinbung(dot)com</a>
            
            <h2>online presence</h2>
            <ul class="online-list">
                {onlinePresence.map(item => <li class="online-link"><a href={item.url} target="_blank"><span class={item.icon}></span></a></li>)}
            </ul>
        </div>
    </div>

</BaseLayout>

<style>
    :global(.wrapper) {
        display: flex;
        flex-direction: column;
    }

    .headshot {
        width: 100%;
        height: auto;
    }

    img {
        width: 100%;
        height: auto;
    }

    .about-content:first-child {
        margin-top: 0;
    }

    .two-col {
        display: flex;
        flex-direction: column;
        gap: var(--main-padding);
        flex-grow: 1;
        height: 100%;
        position: relative;
    }

    .online-list {
        display: flex;
        flex-flow: row wrap;
        justify-content: space-between;
        list-style: none;
        padding-inline: 0;
    }

    .online-link > a {
        color: black;
        font-size: 30px;
    }

    @media screen and (width >= 40rem) {
        .two-col {
            flex-direction: row
        }

        .headshot {
            aspect-ratio: 211 / 248;
            height: 100%;
            width: auto;
            position: absolute;
        }

        img {
            height: 100%;
            width: auto;
        }
    }
</style>