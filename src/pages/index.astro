---
import Gradient from '@components/Gradient.astro';
import BaseLayout from '@layouts/BaseLayout.astro';
---

<BaseLayout pageTitle="/">
    <Gradient />
    <div class="hero-content">
        <h1>hi, i'm justin.</h1>
        <i>student. filmmaker. developer. musician.</i>
    </div>
</BaseLayout>

<style>
    .hero-content {
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 8px;
    }

    h1 {
        font-size: 64px;
    }

    i {
        font-size: 25px;
        color: #fff;
        opacity: 80%;
    }

    h1, i {
        margin: 0px;
    }
</style>
