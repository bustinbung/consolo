---
interface Props {
    title: string
}

import Page from "@layouts/Page.astro";
import Navbar from "@components/Navbar.astro";

const { title } = Astro.props;
---
<Page {title}>
    <div class="page">
        <main>
            <header class="page-title">
                <a href=`/${title.toLowerCase()}` class="header-link">
                    <h1>{title.toLowerCase()}</h1>
                </a>
            </header>
            <slot />
        </main>
        <Navbar />
    </div>
</Page>

<style lang="scss">
    main {
        display: flex;
        height: 100%;
        flex-direction: column;
        flex-grow: 1;
        gap: 1px;
    }

    header {
        padding: var(--global-padding);
        display: flex;
        align-items: center;
        outline: var(--outline);
    }

    .header-link {
        text-decoration: none;
    }
</style>