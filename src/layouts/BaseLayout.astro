---
interface Props {
    pageTitle: string,
    isPost?: boolean
}

import Analytics from '@components/Analytics.astro';
import Navbar from '@components/Navbar.astro';
import Footer from '@components/Footer.astro';

import '@styles/global.css'

const isProd = import.meta.env.PROD;
const { pageTitle, isPost } = Astro.props;
---

<html lang="en">
	<head>
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <meta name="generator" content={Astro.generator} />
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Martian+Mono:wght@400;500;600;700&display=swap" rel="stylesheet">
        <title>{!isPost && "bustinbung"}{pageTitle}</title>
    
        {isProd && <Analytics domainCode="bustinbung"/>}
    </head>

	<body>
        <Navbar />

        <main class="page-content" aria-label="content">
            <div class="wrapper">
                <slot />
            </div>
        </main>

        <!-- <Footer 
            email="justin@bustinbung.com"
            githubUsername="bustinbung"
            versionString="v5.0.3"/> -->
	</body>
</html>
